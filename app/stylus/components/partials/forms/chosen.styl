.chosen-container
  width 100%
  margin-bottom 1rem
  font-size 1em
  transitions()
  &:after
    triangle($black, down, 6px)
    top calc(50% - 3px)
    right 15px
    transitions()
  &:focus
    outline none
  .chosen-single
    padding: 8px 21px 15px;
    height: 43px;
    border-radius 0
    border none
    background $white
    box-shadow none
    &:after
      pseudo(block, absolute)
      bottom 1px
      height 1px
      left 15px
      right 15px
      background $trans
      transitions()

.chosen-container-single .chosen-search
  padding 0
  input[type='text']
    border 0
    padding 11px 15px 12px
    background-image none !important

.chosen-container.chosen-with-drop
  &:after
    transform rotate(180deg)

.chosen-container.chosen-container-active
  box-shadow none
  .chosen-single
    box-shadow none
    border none
    background $white


.chosen-container.chosen-container-active.chosen-with-drop
  box-shadow: 0 4px 5px rgba(0, 0, 0, 0.15);
  .chosen-single
    &:after
      background $gray-line


.chosen-container-single .chosen-drop
  border-radius 0
  border none
  padding 0
  box-shadow none

  box-shadow: 0 4px 5px rgba(0, 0, 0, 0.15);

  transitions()
  .chosen-results
    padding 0
    margin 0
    box-shadow none

    transitions()

    .active-result
      padding 12px 21px 15px
      color $black
      position relative
      transitions()
      &:after
        pseudo(block, absolute)
        bottom 0
        height 1px
        left 15px
        right 15px
        background $gray-line
    .active-result.result-selected
      display none
    .active-result.highlighted
      background $trans
      opacity .5



.chosen-container-single .chosen-single div b
  display none