@import '../../utilities/vars'
@import '../../utilities/mixins'

select
  -webkit-appearance none
  -moz-appearance none
  width 100%
  background $white
  border none
  border-radius 0
  display block
  padding 11px 15px 12px
  margin-bottom 1rem
  transitions()
  &:focus
    outline none

.select-container
  display block
  position relative
  margin-bottom 1rem
  width 100%
  max-width unset
  &:after
    triangle($black, down, 6px)
    top calc(50% - 10px)
    right 15px
    display none
    +mobile()
      display block