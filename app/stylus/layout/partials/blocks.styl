  padding-bottom 97px
  padding-top 125px
  p
    margin-left: 25.5%;
    margin-bottom: 24px;
    +mobile()
      margin-left 0

.section-customer
  padding-top 0
  background $yellow
  position relative
  padding-bottom 0
  &:before
    pseudo(block, absolute)
    top 0
    left 0
    right 0
    background $white
    height 176px
