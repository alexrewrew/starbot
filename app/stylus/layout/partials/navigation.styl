nav
  background $white
  transitions()
  padding: 69px 0 66px;
  +mobile()
    padding 15px 0

//.nav-panel
//  +mobile()
//    padding-top 0

.menu
  list-flex(row)
  justify-content flex-end
  align-items center
  height 100%
  +mobile()
    flex-direction column
    justify-content center
    align-items center
  li
    margin 0 35px
    +mobile()
      margin 20px 0
    a
      display block
      font-size: $s18
      font-weight: 600
      color $black
      letter-spacing: 1.1px
      position relative
      +mobile()
        font-size $s32
      &:after
        pseudo(block, absolute)
        bottom -5px
        height: 2px
        left 0
        right 0
        background $trans
        transitions()
      &:hover
        &:after
          background $yellow
    .active
      &:after
        background $yellow

